{
	"languageserver": {
  		"bash": {
    			"command": "bash-language-server",
    			"args": ["start"],
    			"filetypes": ["sh"]
		}
	}
},
{
	"languageserver": {
		"pyright.enabled": true
	}
},
{
	"languageserver": {
		"java.enabled": true,

		"java.configuration.runtimes": [
		       {
    			"name": "JavaSE-11",
    			"path": "/usr/lib/jvm/java-11-openjdk"
		       },
    		       {
			"name": "JavaSE-19",
    			"path": "/usr/lib/jvm/java-19-openjdk"
		       },
		       {
    			"name": "JavaSE-8",
    			"path": "/usr/lib/jvm/java-8-openjdk",
    			"default": true
		       }
		]
	}
}
